<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Network Requests" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="p-20">
        <Label text="Open the Network panel in Chrome DevTools to inspect the results of the calls" textWrap="true" />

        <Button text="GET without body" tap="{{ getNoBody }}" />
        <Button text="GET with body" tap="{{ getWithBody }}"  />
        <Button text="GET with unauthorized" tap="{{ getUnauthorized }}"  />
        <Button text="GET with delayed response" tap="{{ getDelayed }}"  />
        <Button text="GET with image response" tap="{{ getImage }}"  />
        <Button text="GET binary data (download)" tap="{{ getBinaryData }}"  />
        <Button text="POST with headers" tap="{{ postHeaders }}"  />
        <Image src="{{ imageSource }}" stretch="none" />
        
    </StackLayout>
</Page>
